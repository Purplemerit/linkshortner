{
  "manifest_version": 3,
  "name": "short.link",
  "version": "1.0",
  "description": "Privacy-first URL shortener with built-in QR codes",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Short your link"
  },
  "host_permissions": ["https://api.short.link/*", "https://short.link/*"]
}

